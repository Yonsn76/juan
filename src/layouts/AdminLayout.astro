---
import '../styles/admin.css';

const { title, user } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - Panel de Administración</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <div class="admin-container">
    <header class="admin-header">
      <div class="admin-header-content">
        <div class="admin-logo">
          <img src="/logo.png" alt="Casa Biker Logo" class="admin-logo-img">
          <h1>Panel de Administración</h1>
        </div>
        <div class="admin-user-info">
          <span class="admin-username">
            <i class="fas fa-user-circle"></i>
            {user?.name || 'Admin'}
          </span>
          <a href="/admin/logout" class="admin-logout-btn">
            <i class="fas fa-sign-out-alt"></i> Cerrar sesión
          </a>
        </div>
      </div>
    </header>

    <div class="admin-content">
      <aside class="admin-sidebar">
        <nav class="admin-nav">
          <ul>
            <li class="admin-nav-item">
              <a href="/admin" class="admin-nav-link">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
              </a>
            </li>
            <li class="admin-nav-item">
              <a href="/admin/products" class="admin-nav-link">
                <i class="fas fa-box"></i>
                <span>Productos</span>
              </a>
            </li>
            <li class="admin-nav-item">
              <a href="/admin/categories" class="admin-nav-link">
                <i class="fas fa-tags"></i>
                <span>Categorías</span>
              </a>
            </li>
            <li class="admin-nav-item">
              <a href="/admin/users" class="admin-nav-link">
                <i class="fas fa-users"></i>
                <span>Usuarios</span>
              </a>
            </li>
            <li class="admin-nav-item">
              <a href="/admin/settings" class="admin-nav-link">
                <i class="fas fa-cog"></i>
                <span>Configuración</span>
              </a>
            </li>
          </ul>
        </nav>
      </aside>

      <main class="admin-main">
        <slot />
      </main>
    </div>

    <footer class="admin-footer">
      <p>&copy; {new Date().getFullYear()} Casa Biker. Todos los derechos reservados.</p>
    </footer>
  </div>
</body>
</html>

<style>
  .admin-logo {
    display: flex;
    align-items: center;
  }

  .admin-logo-img {
    height: 40px;
    margin-right: 1rem;
  }

  .admin-footer {
    text-align: center;
    padding: 1rem;
    background-color: #f8f9fa;
    border-top: 1px solid #e9ecef;
    color: #6c757d;
    font-size: 0.875rem;
    margin-top: auto;
  }
</style>

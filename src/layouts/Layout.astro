---
interface Props {
  title: string;
}

const { title } = Astro.props;

import '../styles/global.css';
import '../styles/header.css';
import '../styles/footer.css';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - Zona Biker 15</title>
    
    <!-- Font Awesome -->
    <link 
      rel="stylesheet" 
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <slot name="header" />
    <main>
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>

<style is:global>
  :root {
    --biker-red: #e30613;
    --biker-black: #1a1a1a;
    --gray-100: #f7fafc;
    --gray-200: #edf2f7;
    --gray-300: #e2e8f0;
    --gray-400: #cbd5e0;
    --gray-500: #a0aec0;
    --gray-600: #718096;
    --gray-700: #4a5568;
    --gray-800: #2d3748;
    --gray-900: #1a202c;
    --container-width: 1200px;
    --header-height: 80px;
    --footer-height: 300px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background-color: var(--gray-100);
  }

  body {
    line-height: 1.5;
    color: var(--gray-800);
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .container {
    width: 100%;
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 1rem;
  }

  .section {
    padding: 4rem 0;
  }

  .section-title {
    font-size: 2rem;
    color: var(--biker-black);
    text-align: center;
    margin-bottom: 2rem;
  }

  .btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
  }

  .btn-primary {
    background-color: var(--biker-red);
    color: white;
  }

  .btn-primary:hover {
    background-color: #c30510;
  }

  .btn-secondary {
    background-color: var(--biker-black);
    color: white;
  }

  .btn-secondary:hover {
    background-color: #000;
  }
</style>

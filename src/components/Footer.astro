---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { icon: 'facebook-f', url: 'https://facebook.com/zonabiker15' },
  { icon: 'instagram', url: 'https://instagram.com/zonabiker15' },
  { icon: 'whatsapp', url: 'https://wa.me/51123456789' },
  { icon: 'tiktok', url: 'https://tiktok.com/@zonabiker15' }
];

const footerLinks = [
  {
    title: 'Empresa',
    links: [
      { text: 'Nosotros', url: '/about' },
      { text: 'Servicios', url: '/services' },
      { text: 'Catálogo', url: '/catalog' },
      { text: 'Contacto', url: '/contact' }
    ]
  },
  {
    title: 'Servicios',
    links: [
      { text: 'Mantenimiento', url: '/services#mantenimiento' },
      { text: 'Personalización', url: '/services#personalizacion' },
      { text: 'Accesorios', url: '/services#accesorios' },
      { text: 'Seguridad', url: '/services#seguridad' }
    ]
  }
];
---

<footer class="footer">
  <div class="footer-top">
    <div class="container">
      <div class="footer-grid">
        <!-- Brand Column -->
        <div class="footer-brand">
          <a href="/" class="footer-logo">
            <span class="logo-text">ZONA<span class="accent">15</span></span>
          </a>
          <p class="footer-description">
            Tu destino premium para todo lo relacionado con motocicletas en Huánuco.
            Calidad, innovación y pasión por las dos ruedas.
          </p>
          <div class="social-links">
            {socialLinks.map(({ icon, url }) => (
              <a href={url} class="social-link" target="_blank" rel="noopener noreferrer">
                <i class={`fab fa-${icon}`} aria-hidden="true"></i>
              </a>
            ))}
          </div>
        </div>

        <!-- Links Columns -->
        {footerLinks.map(({ title, links }) => (
          <div class="footer-links">
            <h3 class="footer-title">{title}</h3>
            <ul class="footer-list">
              {links.map(({ text, url }) => (
                <li>
                  <a href={url} class="footer-link">{text}</a>
                </li>
              ))}
            </ul>
          </div>
        ))}

        <!-- Contact Column -->
        <div class="footer-contact">
          <h3 class="footer-title">Contacto</h3>
          <div class="contact-info">
            <p>
              <i class="fas fa-map-marker-alt"></i>
              Jr. Huánuco 123, Huánuco
            </p>
            <p>
              <i class="fas fa-phone"></i>
              +51 123 456 789
            </p>
            <p>
              <i class="fas fa-envelope"></i>
              info@zonabiker15.com
            </p>
            <p>
              <i class="fas fa-clock"></i>
              Lun - Sáb: 9:00 - 18:00
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">
      <p class="copyright">
        © {currentYear} Zona Biker 15. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #1a1a1a;
    background-image: 
      linear-gradient(45deg, #2a2a2a 25%, transparent 25%),
      linear-gradient(-45deg, #2a2a2a 25%, transparent 25%),
      linear-gradient(45deg, transparent 75%, #2a2a2a 75%),
      linear-gradient(-45deg, transparent 75%, #2a2a2a 75%);
    background-size: 20px 20px;
    background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
    color: #e0e0e0;
    border-top: 4px solid #d4af37;
    padding: 4rem 0 0;
    position: relative;
    overflow: hidden;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr repeat(3, 1fr) 1.5fr;
    gap: var(--spacing-xl);
  }

  .footer-brand {
    max-width: 400px;
  }

  .footer-logo {
    display: inline-block;
    margin-bottom: var(--spacing-md);
    text-decoration: none;
  }

  .logo-text {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 900;
    color: var(--text-light);
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .accent {
    color: var(--lambo-gold);
  }

  .footer-description {
    margin-bottom: var(--spacing-lg);
    color: #d4d4d4;
    font-size: var(--text-sm);
    line-height: 1.6;
  }

  .social-links {
    display: flex;
    gap: var(--spacing-sm);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .social-link:hover {
    background: var(--lambo-red);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }

  .footer-title {
    color: #ffffff; /* Blanco puro */
    font-size: 1.25rem;
    font-weight: 700; /* Más grueso */
    margin-bottom: var(--spacing-md);
    text-transform: uppercase;
    letter-spacing: 1px;
    border-bottom: 2px solid #ffffff; /* Borde blanco */
    display: inline-block;
    padding-bottom: 5px;
  }

  .footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-link {
    display: block;
    color: #ffffff; /* Blanco puro */
    text-decoration: none;
    padding: var(--spacing-xs) 0;
    transition: all 0.3s ease;
    font-weight: 500; /* Peso normal */
  }

  .footer-link:hover {
    color: #ffffff; /* Blanco puro */
    transform: translateX(5px);
    text-decoration: underline; /* Subrayado al pasar el mouse */
    opacity: 0.9; /* Ligera transparencia al hacer hover */
  }

  .contact-info p {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
    color: #e0e0e0;
    transition: all 0.3s ease;
  }
  
  .contact-info p:hover {
    color: #ff6b35;
  }

  .contact-info i {
    color: #ff6b35;
    width: 16px;
  }

  .footer-bottom {
    padding: 1.5rem 0;
    text-align: center;
    font-size: 0.875rem;
    color: #a0a0a0;
    background: rgba(0, 0, 0, 0.5);
    position: relative;
    z-index: 1;
  }

  .copyright {
    color: var(--text-tertiary);
    font-size: var(--text-sm);
    margin: 0;
  }

  @media (max-width: 1200px) {
    .footer-grid {
      grid-template-columns: repeat(4, 1fr);
    }

    .footer-brand {
      grid-column: span 4;
      max-width: 100%;
      text-align: center;
      margin-bottom: var(--spacing-xl);
    }

    .social-links {
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }

    .footer-brand {
      grid-column: span 2;
    }

    .footer-contact {
      grid-column: span 2;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-brand,
    .footer-contact {
      grid-column: span 1;
    }

    .footer-top {
      padding: var(--spacing-xl) 0;
    }
  }
</style>

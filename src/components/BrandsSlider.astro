---
const brands = [
  { name: 'Yamaha', image: '/images/brands/yamaha.png' },
  { name: 'Honda', image: '/images/brands/honda.png' },
  { name: 'Kawasaki', image: '/images/brands/kawasaki.png' },
  { name: 'Suzuki', image: '/images/brands/suzuki.png' },
  { name: 'KTM', image: '/images/brands/ktm.png' },
  { name: 'BMW', image: '/images/brands/bmw.png' },
  { name: 'Ducati', image: '/images/brands/ducati.png' },
  { name: 'Harley-Davidson', image: '/images/brands/harley.png' }
];
---

<div class="brands-container">
  <div class="brands-slider">
    <div class="slide-track">
      {brands.map(brand => (
        <div class="brand-slide">
          <img src={brand.image} alt={brand.name} loading="lazy" />
        </div>
      ))}
      {/* Duplicamos las marcas para el efecto infinito */}
      {brands.map(brand => (
        <div class="brand-slide">
          <img src={brand.image} alt={brand.name} loading="lazy" />
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .brands-container {
    width: 100%;
    background: rgba(0, 0, 0, 0.5);
    padding: 2rem 0;
    position: relative;
    overflow: hidden;
  }

  .brands-container::before,
  .brands-container::after {
    content: '';
    position: absolute;
    top: 0;
    width: 200px;
    height: 100%;
    z-index: 2;
  }

  .brands-container::before {
    left: 0;
    background: linear-gradient(to right, rgba(0, 0, 0, 0.9), transparent);
  }

  .brands-container::after {
    right: 0;
    background: linear-gradient(to left, rgba(0, 0, 0, 0.9), transparent);
  }

  .brands-slider {
    width: 100%;
    height: 100px;
    position: relative;
    display: flex;
    align-items: center;
  }

  .slide-track {
    display: flex;
    width: calc(250px * 16); /* 8 brands * 2 (duplicated) * 250px */
    animation: scroll 40s linear infinite;
  }

  .brand-slide {
    width: 250px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 20px;
  }

  .brand-slide img {
    max-width: 180px;
    max-height: 80px;
    object-fit: contain;
    filter: brightness(0) invert(1);
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .brand-slide:hover img {
    opacity: 1;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-250px * 8)); /* Move back 8 brands */
    }
  }

  /* Pause animation on hover */
  .brands-slider:hover .slide-track {
    animation-play-state: paused;
  }

  @media (max-width: 768px) {
    .brands-slider {
      height: 80px;
    }

    .brand-slide {
      width: 200px;
    }

    .brand-slide img {
      max-width: 140px;
      max-height: 60px;
    }

    .slide-track {
      width: calc(200px * 16);
    }

    @keyframes scroll {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-200px * 8));
      }
    }
  }
</style>

<script>
  // Asegurarse de que la animaciÃ³n se reinicie suavemente
  const slideTrack = document.querySelector('.slide-track') as HTMLElement;
  if (slideTrack) {
    slideTrack.addEventListener('animationend', () => {
      slideTrack.style.animation = 'none';
      slideTrack.offsetHeight; // Trigger reflow
      slideTrack.style.animation = '';
    });
  }
</script> 
---
interface Testimonial {
  quote: string;
  name: string;
  designation: string;
  src: string;
}

const { testimonials = [] } = Astro.props;
---

<section class="animated-testimonials">
  <div class="container">
    <div class="testimonials-wrapper">
      {testimonials.map((t, index) => (
        <div class={`testimonial-slide ${index === 0 ? 'active' : ''}`} data-index={index}>
          <div class="slide-image">
            <img src={t.src} alt={t.name} loading="lazy" />
          </div>
          <div class="slide-content">
            <p class="quote">{t.quote}</p>
            <h3 class="name">{t.name}</h3>
            <p class="role">{t.designation}</p>
          </div>
        </div>
      ))}
    </div>
    <div class="controls">
      <button class="prev" aria-label="Anterior">&#10094;</button>
      <button class="next" aria-label="Siguiente">&#10095;</button>
    </div>
  </div>
</section>

<script>
  function initAnimatedTestimonials() {
    const slides = document.querySelectorAll('.animated-testimonials .testimonial-slide');
    const prev = document.querySelector('.animated-testimonials .prev');
    const next = document.querySelector('.animated-testimonials .next');
    let current = 0;
    if (slides.length <= 1) return;

    function show(index) {
      slides[current].classList.remove('active');
      current = (index + slides.length) % slides.length;
      slides[current].classList.add('active');
    }

    prev.addEventListener('click', () => show(current - 1));
    next.addEventListener('click', () => show(current + 1));

    setInterval(() => show(current + 1), 5000);
  }

  document.addEventListener('DOMContentLoaded', initAnimatedTestimonials);
  document.addEventListener('astro:page-load', initAnimatedTestimonials);
</script>

<style>
  .animated-testimonials {
    padding: 4rem 0;
  }

  .testimonials-wrapper {
    position: relative;
    overflow: hidden;
    height: 20rem;
  }

  .testimonial-slide {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 1rem;
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  .testimonial-slide.active {
    opacity: 1;
    transform: scale(1);
    z-index: 1;
  }

  .slide-image img {
    width: 100%;
    max-height: 250px;
    object-fit: cover;
    border-radius: 12px;
  }

  .quote {
    font-style: italic;
    color: var(--gray-700);
  }

  .name {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--biker-black);
  }

  .role {
    margin: 0;
    color: var(--gray-600);
  }

  .controls {
    margin-top: 1rem;
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .controls button {
    background-color: var(--gray-200);
    border: none;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .controls button:hover {
    background-color: var(--gray-300);
  }

  @media (min-width: 768px) {
    .testimonial-slide {
      flex-direction: row;
      text-align: left;
    }

    .slide-image,
    .slide-content {
      width: 50%;
    }

    .slide-content {
      padding: 0 1rem;
    }
  }
</style>

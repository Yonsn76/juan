---
export interface Props {
  brands: {
    name: string;
    logo: string;
  }[];
}

const { brands } = Astro.props;
---

<div class="brands-grid-container">
  <div class="brands-grid">
    {
      brands.map((brand) => (
        <div class="brand-item">
          <div class="brand-image-wrapper">
            <img src={brand.logo} alt={brand.name} loading="lazy" />
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .brands-grid-container {
    width: 100%;
    position: relative;
    padding: 2rem 0;
    margin: 2rem 0;
  }

  .brands-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4rem;
    justify-items: center;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .brand-item {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
  }

  .brand-item:hover {
    transform: translateY(-5px);
  }

  .brand-image-wrapper {
    width: 160px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-item img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    transition: all 0.4s ease;
    will-change: transform;
  }

  .brand-item:hover img {
    transform: scale(1.05);
  }

  /* Tablet */
  @media (max-width: 768px) {
    .brands-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }

    .brand-image-wrapper {
      width: 120px;
      height: 60px;
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    .brands-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .brand-image-wrapper {
      width: 100px;
      height: 50px;
    }
  }

  /* Small Mobile */
  @media (max-width: 360px) {
    .brands-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .brand-image-wrapper {
      width: 80px;
      height: 40px;
    }
  }
</style>
